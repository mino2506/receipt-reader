generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Post{
  id                Int         @id @default(autoincrement())
  title             String
  description       String
  date              DateTime    @default(now())
}

model User {
  id                String      @id @db.Uuid
  email             String      @unique
  display_name      String?
  avatar_url        String?
  created_at        DateTime    @default(now())
  updated_at        DateTime    @updatedAt
  provider          String?
  receipts          Receipt[]

  subscriptionHistories  SubscriptionHistory[] 
  googleCloudVisionUsageLogs    GoogleCloudVisionUsageLog[]
  openAiUsageLogs     OpenAiUsageLog[]
}

model Tier {
  id              String   @id @db.Uuid @default(uuid())
  name            String   @unique
  maxAiTokens     Int?
  maxAiCalls      Int?
  maxOcrCalls     Int?
  priceJPY        Int?
  createdAt       DateTime @default(now())
  subscriptionHistories  SubscriptionHistory[] 
}

model SubscriptionHistory {
  id         String   @id @default(cuid())
  userId     String   @db.Uuid
  user       User     @relation(fields: [userId], references: [id])
  tierId     String
  tier       Tier     @relation(fields: [tierId], references: [id])
  startedAt  DateTime
  endedAt    DateTime?
}

model OpenAiUsageLog {
  id        String   @id @default(cuid())
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  tokenIn   Int
  tokenOut  Int
  success   Boolean
  createdAt DateTime @default(now())
}

model GoogleCloudVisionUsageLog {
  id        String   @id @default(cuid())
  userId    String   @db.Uuid
  user      User     @relation(fields: [userId], references: [id])
  success   Boolean
  createdAt DateTime @default(now())
}


model Receipt{
  id                String      @id @db.Uuid @default(uuid())
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  deletedAt         DateTime? 
  totalPrice        Int
  receiptDetails    ReceiptDetail[]

  date              DateTime?

  storeId           String?     @db.Uuid// Storeとのリレーション。AIが推定できない場合もあるので nullable に
  store             Store?      @relation(fields: [storeId], references: [id])

  userId            String      @db.Uuid
  user              User        @relation(fields: [userId], references: [id])
}

model ReceiptDetail{
  id                String      @id @db.Uuid @default(uuid())

  itemId            String      @db.Uuid
  item              Item        @relation(fields: [itemId], references: [id])

  amount            Int
  unitPrice         Int
  subTotalPrice     Int
  tax               Int
  currency          String?

  receiptId         String      @db.Uuid
  receipt           Receipt     @relation(fields: [receiptId], references: [id])

  order             Int

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  deletedAt         DateTime?
}

model Item {
  id                String      @id @db.Uuid @default(uuid())

  rawName           String      // OCRや構造化時のAI簡易補正、手入力そのまま
  normalized        String?     @db.VarChar(255) @unique  // 後から補正を強くする用。GPTや手動補正で整えたユニークな名前
  category          String      // Optional: 後でGPT分類 or 手動選択

  receiptDetails    ReceiptDetail[]

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

model Store {
  id                String      @id @default(uuid()) @db.Uuid

  rawName           String      // OCRやAIによる補正、手入力された店舗名
  normalized        String?     @db.VarChar(255) @unique  // 正規化済み店舗名（外部マスタと突合などに使用）

  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  deletedAt         DateTime?
  
  receipts          Receipt[]   // Store <- Receipt リレーション（1対多）
}


